CC = g++
CUDACC = nvcc

CCFLAGS += -std=c++14
CCFLAGS += -I/usr/local/include -I/usr/include/eigen3
CCFLAGS += -Wall -Wno-deprecated-declarations

ifdef RELEASE
  CCFLAGS += -O3
  CUDAFLAGS += -O3
endif

ifdef DEBUG
  CCFLAGS += -g
  CCFLAGS += -pg
  CLFLAGS += -pg
endif

CLFLAGS += -L/usr/local/lib
CLFLAGS += -lpthread
