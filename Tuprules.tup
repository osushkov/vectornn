CC = g++
CUDACC = nvcc

CCFLAGS += -std=c++14
CCFLAGS += -I/usr/local/include -I/usr/include/eigen3
CCFLAGS += -Wall -Wno-deprecated-declarations

ifdef RELEASE
  CCFLAGS += -O3 -march=native -msse -msse2 -msse3 -msse4.1 -msse4.2
  CUDAFLAGS += -O3
endif

ifdef DEBUG
  CCFLAGS += -g
endif

CLFLAGS += -L/usr/local/lib
CLFLAGS += -lpthread
